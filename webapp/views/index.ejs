<% include('partials/header.ejs') %>
    <div class="table-wrapper">
        <% if (materials.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Instrument group</th>
                        <th scope="col">Instruments</th>
                        <th scope="col">Main Part</th>
                        <th scope="col">Subpart</th>
                        <th scope="col">Trade Name</th>
                        <!--<th scope="col">Username</th>
                        <th scope="col">Action</th>-->
                    </tr>
                </thead>
                <tbody>
                    <% materials.forEach((material, index) => { %>
                        <tr>
                            <th scope="row"><%= material.ID %></th>
                            <td><%= material.Instrument_groups %></td>
                            <td><%= material.Instruments %></td>
                            <td><%= material.Main_part %></td>
                            <td><%= material.Subpart %></td>
                            <td><%= material.Trade_name %></td>
                            <!--<td>
                                <a href="/edit/<%= material.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= material.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>-->
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No materials found. Go <a href="/add" >here</a> to add materials.</p>
        <% } %>
    </div>
</div>
</body>
</html>